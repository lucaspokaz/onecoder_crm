<% include ../default/header.ejs %>

<body class="vertical-layout vertical-menu content-detached-left-sidebar fixed-navbar" data-open="click" data-menu="vertical-menu" data-col="content-detached-left-sidebar">
    
    <% include ../default/navbar.ejs %>
    
    <% include ../default/menu.ejs %>
    
    <!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-wrapper">
            
            <div class="content-header row mb-1">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <h3 class="content-header-title">Nova Projeto</h3>
                    <div class="row breadcrumbs-top">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index">Home</a>
                                </li>
                                <li class="breadcrumb-item"><a href="/projetos">Projetos</a>
                                </li>
                                <li class="breadcrumb-item active">Novo Projeto
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            
            <% include ../default/messages.ejs %>
            
            <div class="content-body">
                <!-- Basic form layout section start -->
                <section id="basic-rm-layouts">
                    
                    <div class="row match-height">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-content collapse show">
                                    <div class="card-header bg-secondary">
                                        <h4 class="card-title text-white">Novo Projeto</h4>
                                        <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
                                    </div>
                                    
                                    <div class="card-body">
                                        
                                        <form class="form" method="post">
                                            
                                            <div class="form-body">
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        <label>Descrição</label>
                                                        <input type="text" class="form-control" name="descricao" id="descricao" value="<%- data.descricao %>" required />
                                                    </div>
                                                    
                                                    <div class="form-group col-md-6">
                                                        <label>Cliente</label>
                                                        <div>
                                                            <input type="hidden" required />
                                                            <select class="select2 form-control" id="select2-icons" name="cliente" id="cliente" required>
                                                                <option value=""></option>
                                                                <% if (data_clientes) { %>
                                                                    <% data_clientes.forEach(function(c){ %>
                                                                        <option value="<%= c.id_cliente %>" <%= data.id_cliente == c.id_cliente ? 'selected' : '' %> ><%= c.nome %></option>
                                                                        <% }) %>
                                                                        <% }; %>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="row">
                                                            <div class="form-group col-md-6">
                                                                <label>Situação</label>
                                                                <select class="select2 form-control" name="ativo" id="ativo" required>
                                                                    <option value="1" <%= data.ativo === '1' ? 'selected' : '' %> > Ativo </option>
                                                                    <option value="0" <%= data.ativo === '0' ? 'selected' : '' %> > Inativo </option>
                                                                </select>
                                                            </div>
                                                            
                                                            <div class="form-group col-md-3" id="data_1">
                                                                <label>Data de Início</label>
                                                                <div class="input-group date">
                                                                    <span class="input-group-addon">
                                                                        <i class="far fa-calendar"></i>
                                                                    </span>
                                                                    <input type="text" name="data_inicio" id="data_inicio" data-mask="99/99/9999"
                                                                    value="<%= formatter.exibirDataNull(data.inicio) %>" class="form-control">
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="form-group col-md-3" id="data_1">
                                                                <label>Data de Fim</label>
                                                                <div class="input-group date">
                                                                    <span class="input-group-addon">
                                                                        <i class="far fa-calendar"></i>
                                                                    </span>
                                                                    <input type="text" name="data_fim" id="data_fim" data-mask="99/99/9999"
                                                                    value="<%= formatter.exibirDataNull(data.fim) %>" class="form-control">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-actions">
                                                        <a href="/projetos" class="btn btn-danger"><i class="ft-x"></i> Cancelar</a>
                                                        <button type="submit" class="btn btn-info">
                                                            <i class="la la-check-square-o"></i> Salvar
                                                        </button>
                                                    </div>
                                                    
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                
                            </div>
                            
                        </section>
                    </div>
                </div>
            </div>
            <!-- END: Content-->
            
            <% include ../default/footer.ejs %>
            
            <script type="text/javascript">
                $('.input-group.date').datepicker({
                    format: "dd/mm/yyyy",
                    todayBtn: "linked",
                    orientation: "bottom auto",
                    autoclose: true,
                    language: 'pt-BR'
                });
            </script>
            
        </body>
        
        </html>